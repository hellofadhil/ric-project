@{
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-xl rounded-xl p-8 w-full max-w-md">
        <h1 class="text-3xl font-bold text-center mb-6">Login ğŸ”</h1>

        <form asp-controller="Auth" asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <input name="email" type="email" placeholder="Email"
                   class="w-full border p-3 rounded mb-3" required />

            <input name="password" type="password"
                   placeholder="Password"
                   class="w-full border p-3 rounded mb-3" required />

            <button type="submit"
                    class="w-full bg-blue-600 text-white p-3 rounded font-semibold">
                Sign In
            </button>
        </form>

        <p class="text-center mt-4">
            Belum punya akun? <a href="/Auth/Register" class="text-blue-600">Register</a>
        </p>
    </div>
</div>
